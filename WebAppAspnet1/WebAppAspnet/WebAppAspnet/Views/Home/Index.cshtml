


@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 align ="center">Доска объявлений</h1>
    <p align ="center" class="lead">Ваше объявление обязательно заметят!</p>
</div>


<div class="row">

    <p style="font-family:Arial, Helvetica, sans-serif;font-size:36px"><b>Поиск объявления...</b> </p>
    <div class="search">
        @{
            AjaxOptions ajax = new AjaxOptions
            {
                UpdateTargetId = "programmersList",
                Url = Url.Action("GetAds")
            };
        }
        <div>
        @using (Ajax.BeginForm(ajax))
        {
            <input name = "filter" id = "strquery" value = "@ViewBag.filter" placeholder = "поиск по сайту" size = "300"/>
            <select name = "cmbox" onselect = "@ViewBag.cmbox" style = "height: 26px">
                <option> Выберите рубрику </option>
                <option > Social Services </option>
                <option > Transport </option>
                <option > Building </option>
                <option > Work </option>
            </select>
            <span>
                <button type = "submit" > Найти </button >
            </span>
            <div class ="row" id="programmersList">
                    @Html.Action("GetAds")
            </div>
        }
        </div>
        </div>
 
</div>